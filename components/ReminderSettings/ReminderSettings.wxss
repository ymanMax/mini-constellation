.reminder-settings {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  z-index: 1000;
}

.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.settings-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

.settings-content {
  flex: 1;
  background: #fff;
  overflow-y: auto;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-left {
  flex: 1;
}

.item-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-right {
  display: flex;
  align-items: center;
}

.reminder-types {
  display: flex;
  gap: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #fff;
  min-width: 100rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #735afd;
  background: #f0edff;
}

.type-item text {
  font-size: 24rpx;
  color: #333;
  margin-top: 8rpx;
}

.picker-text {
  font-size: 32rpx;
  color: #735afd;
  padding: 10rpx 20rpx;
  background: #f0edff;
  border-radius: 8rpx;
}

.setting-section {
  padding: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.record-list {
  background: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-date {
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.record-status.sent {
  background: #e8f5e9;
  color: #2e7d32;
}

.record-status.failed {
  background: #ffebee;
  color: #c62828;
}

.record-empty {
  padding: 60rpx 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.settings-footer {
  padding: 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #735afd 0%, #5a46d8 100%);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.save-btn::after {
  border: none;
}
