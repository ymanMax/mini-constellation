.container_community {
  width: 100%;
  min-height: 100%;
  background: #f5f5f5;
  padding-top: 88rpx;
}

/* 发布区域 */
.publish_section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.publish_input_container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.publish_input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.publish_btn {
  padding: 20rpx 40rpx;
  background: linear-gradient(90deg, #735afd 0%, #b63af3 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.publish_btn[disabled] {
  background: #ccc;
}

/* 帖子列表 */
.posts_list {
  padding: 0 20rpx 100rpx;
}

.post_item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 帖子头部 */
.post_header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user_info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.post_meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.constellation {
  color: #735afd;
}

/* 帖子内容 */
.post_content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
}

/* 帖子操作 */
.post_actions {
  display: flex;
  gap: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action_item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.action_icon {
  font-size: 32rpx;
  color: #999;
}

.action_icon.liked {
  color: #ff4d4f;
}

.action_text {
  font-size: 26rpx;
}

/* 评论列表 */
.comments_list {
  margin-top: 20rpx;
}

.comment_item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.comment_avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment_content {
  flex: 1;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 20rpx;
}

.comment_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment_username {
  font-size: 26rpx;
  font-weight: bold;
  color: #735afd;
}

.comment_time {
  font-size: 22rpx;
  color: #999;
}

.comment_text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 评论输入框 */
.comment_input_overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 2rpx solid #e0e0e0;
  padding: 20rpx;
  z-index: 100;
}

.comment_input_container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.comment_input {
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 28rpx;
  min-height: 80rpx;
}

.comment_buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.comment_cancel_btn {
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 50rpx;
  font-size: 26rpx;
}

.comment_send_btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(90deg, #735afd 0%, #b63af3 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 26rpx;
}

.comment_send_btn[disabled] {
  background: #ccc;
}
